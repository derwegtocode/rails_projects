<div class="d-flex align-items-center justify-content-center">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="card border-light mb-3">
        <div class="card-header fw-bold">
          <% if user_signed_in? %>
            <%= post.user.email[/^[^@]*/] %>
          <% else %>
            <%= "Annonymous" %>
          <% end %>
        </div>
        <div class="card-body">
          <p class="card-text">
            <%= post.body %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>