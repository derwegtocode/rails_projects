  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @post.errors.full_messages.each do |message| %> 
        <div><%= message %></div>
       <% end %></h2>
    </div>
  <% end %>

<%= form_with model: @post, method: :post do |form| %>
  <%= form.label :body, "Share your secret:"%>
  <%= form.text_area :body, size: "70x10" %>
  <%= form.submit "Share" %>
<% end %>

