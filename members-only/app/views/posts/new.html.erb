  <% if @post.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @post.errors.full_messages.each do |message| %> 
        <div><%= message %></div>
       <% end %></h2>
    </div>
  <% end %>

<%= form_with model: @post, method: :post do |form| %>
  <div class="d-flex align-items-center justify-content-center flex-column">
    <%= form.label :body, "Share your secret:"%><br/>
    <%= form.text_area :body, size: "70x10" %><br/>
    <%= form.submit "Share", class:"btn btn-light" %><br/>
  </div>
<% end %>

