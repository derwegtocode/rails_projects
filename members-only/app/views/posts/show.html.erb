
  <div class="container card align-items-center justify-content-center f-direction-column">
    <% @posts.each do |post| %>
      <div class="card border-dark mb-3 mt-3" style="width: 50rem;">
        <div class="card-body align-self-center ">
          <p class="card-text">
            <%= post.body %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
