<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> made it unable to save the user:</h2>

    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

  <%= form_with model: @user do |form| %>
    <%= form.label :username, "Pick a cool username:" %>
    <%= form.text_field :username, placeholder: "I said cool!" %>
    <%= form.label :email, "Give us your email address, it's safe with us:" %>
    <%= form.email_field :email, placeholder: "ilovebananas@moneky.com" %>
    <%= form.label :password, "Top secret password goes here:" %>
    <%= form.password_field :password, placeholder: "FIRST LOOK BEHIND YOU" %>
    <%= form.submit "Create User" %>
  <% end %>

